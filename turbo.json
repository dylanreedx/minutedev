{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "LINEAR_API_KEY",
    "TURSO_AUTH_TOKEN",
    "TURSO_DATABASE_URL",
    "GITHUB_CLIENT_SECRET",
    "GITHUB_CLIENT_ID",
    "RESEND_API_KEY",
    "BETTER_AUTH_SECRET",
    "VITE_BETTER_AUTH_URL",
    "UPLOADTHING_TOKEN",
    "UPLOADTHING_SECRET_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
